 */

public class EjercicioString3 {
  static String cadena="Mañana voy a irme a hacer un viaje al Caribe";
  static public int numerodevecesa=0,numerodevecese=0,nuerodeveceso=0,n;

  public static void main(String[] args) {
    for (n=0;n<cadena.length();n++)
      if (cadena.charAt(n)=='a')
        numerodevecesa++;

      else if (cadena.charAt(n)=='e')
        numerodevecese++;

           else if (cadena.charAt(n)=='e')
              numerodevecese++;

    System.out.println("La letra a aparece "+numerodevecesa+" veces");
    System.out.println("La letra e aparece "+numerodevecese+" veces");
    System.out.println("La letra o aparece "+numerodeveceso+" veces");
  }//main
}//class
