public class CuentaLaLetra {

  private String cadena;
  private char caracter;

  public int CuentaLaLetra(char caracter,String cadena) {
  int veces=0,n=0;

  for (n=0;n<cadena.length();n++)
    if (cadena.charAt(n)==caracter)
      veces++;
  return veces;
  }
}//class
